extends layout

block content
  // Header
  header#header.alt
    h1
      a(href="/")
        | #{title}
    | &#x9;
    nav#nav
      ul
        li
          a(href="/") Home
        | &#x9;&#x9;&#x9;
        li
          a(href="/login") Login
        | &#x9;&#x9;&#x9;
        li
          a.button(href="/signin") Sign Up
  // Banner
  section#banner
    article
      img(src="images/InternationalFlags.jpg", alt="")
      | &#x9;&#x9;
      .inner
        h2
          a(href="#") #{subtitle}
    | &#x9;
  // One
  section#one.wrapper.major-pad
    .inner
      section.spotlight
        .content
          h2 Sign up to study in America
          | &#x9;&#x9;&#x9;&#x9;
          p
            | Sign up and come live in America with the school and family of your choosing. Not only will it give you the chance to perfect english you will also be able to gain contacts and access to higher education.
        | &#x9;&#x9;&#x9;
        span.image
          img(src="images/student-intl.jpeg", alt="")
  // Two
  section#two.wrapper.content-pad
    .inner
      .features
        section.content
          img(src="images/Calstatefullerton.jpeg", alt="")

          | &#x9;&#x9;&#x9;&#x9;
          h3 Schools
          | &#x9;&#x9;&#x9;&#x9;
          p
            | Back ground checked family with video conferencing
        | &#x9;&#x9;&#x9;
        section.content
          span.icon-wrapper.major
            span.icon.fa-paper-plane
          | &#x9;&#x9;&#x9;&#x9;
          h3 Housing
          | &#x9;&#x9;&#x9;&#x9;
          p
            | Search housing in surrounding school areas.
        | &#x9;&#x9;&#x9;
        section.content
          span.icon-wrapper.major
            span.icon.fa-cloud
          | &#x9;&#x9;&#x9;&#x9;
          h3 About us
          | &#x9;&#x9;&#x9;&#x9;
          p
            | Bringing international students to America to gain a better education with local families.
  // Three
  section#three.wrapper.style2
    .inner
      h2 Etiam sed tellus
      | &#x9;&#x9;
      .posts
        section.post
          span.image
            img(src="images/pic01.jpg", alt="")
          | &#x9;&#x9;&#x9;&#x9;
          .content
            h3 Learn about upcoming events
            | &#x9;&#x9;&#x9;&#x9;&#x9;
            p
              | Look at the different cities affered abroad in America
            | &#x9;&#x9;&#x9;&#x9;&#x9;
            ul.actions
              li
                a.button(href="#") More
        | &#x9;&#x9;&#x9;
        section.post
          span.image
            img(src="images/pic02.jpg", alt="")
          | &#x9;&#x9;&#x9;&#x9;
          .content
            h3 Family Registration
            | &#x9;&#x9;&#x9;&#x9;&#x9;
            p
              | Register as a family to await contact from internatnional students and will be able to upload pictures
            | &#x9;&#x9;&#x9;&#x9;&#x9;
            ul.actions
              li
                a.button(href="#") More
        | &#x9;&#x9;&#x9;
  // Contact
  section#contact.wrapper.split
    .inner
      section
        h2 Send us a message
        | &#x9;&#x9;&#x9;
        form(method="post", action="#")
          .row.uniform
            .6u
              label(for="name") Name
              | &#x9;&#x9;&#x9;&#x9;&#x9;&#x9;
              input#name(type="text", name="name")
            | &#x9;&#x9;&#x9;&#x9;&#x9;
            .6u
              label(for="email") Email
              | &#x9;&#x9;&#x9;&#x9;&#x9;&#x9;
              input#email(type="email", name="email")
            | &#x9;&#x9;&#x9;&#x9;&#x9;
            .12u
              label(for="message") Message
              | &#x9;&#x9;&#x9;&#x9;&#x9;&#x9;
              textarea#message(name="message", rows="5")
            | &#x9;&#x9;&#x9;&#x9;&#x9;
            .12u
              ul.actions
                li
                  input.special(type="submit", value="Send Message")
                | &#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;
                li
                  input(type="reset", value="Reset")
      | &#x9;&#x9;
      section
        h2 Other ways to reach us
        | &#x9;&#x9;&#x9;
        ul.bulleted-icons
          li
            span.icon-wrapper
              span.icon.fa-envelope
            | &#x9;&#x9;&#x9;&#x9;&#x9;
            h3 Email
            | &#x9;&#x9;&#x9;&#x9;&#x9;
            p
              a(href="#") information@untitled.tld
          | &#x9;&#x9;&#x9;&#x9;
          li
            span.icon-wrapper
              span.icon.fa-twitter
            | &#x9;&#x9;&#x9;&#x9;&#x9;
            h3 Twitter
            | &#x9;&#x9;&#x9;&#x9;&#x9;
            p
              a(href="#") twitter.com/untitled-tld
          | &#x9;&#x9;&#x9;&#x9;
          li
            span.icon-wrapper
              span.icon.fa-phone
            | &#x9;&#x9;&#x9;&#x9;&#x9;
            h3 Phone
            | &#x9;&#x9;&#x9;&#x9;&#x9;
            p (800) 555-0000
          | &#x9;&#x9;&#x9;&#x9;
          li
            span.icon-wrapper
              span.icon.fa-facebook
            | &#x9;&#x9;&#x9;&#x9;&#x9;
            h3 Facebook
            | &#x9;&#x9;&#x9;&#x9;&#x9;
            p
              a(href="#") facebook.com/untitled-tld
          | &#x9;&#x9;&#x9;&#x9;
          li
            span.icon-wrapper
              span.icon.fa-home
            | &#x9;&#x9;&#x9;&#x9;&#x9;
            h3 Mailing Address
            | &#x9;&#x9;&#x9;&#x9;&#x9;
            p
              | 1234 Fictional Avenue
              br
              | &#x9;&#x9;&#x9;&#x9;&#x9;Nashville, TN 00000
              br
              | &#x9;&#x9;&#x9;&#x9;&#x9;United States
          | &#x9;&#x9;&#x9;&#x9;
          li
            span.icon-wrapper
              span.icon.fa-linkedin
            | &#x9;&#x9;&#x9;&#x9;&#x9;
            h3 LinkedIn
            | &#x9;&#x9;&#x9;&#x9;&#x9;
            p
              a(href="#") linkedin.com/untitled-tld
  // Footer
  footer#footer
    .inner
      p.copyright
        | &copy; Untitled Corp. All rights reserved. Lorem ipsum dolor sit amet feugiat tempus aliquam.
      | &#x9;&#x9;
      ul.menu
        li
          a(href="#")
            | Terms
            span  of Use
        | &#x9;&#x9;&#x9;
        li
          a(href="#")
            | Privacy
            span  Policy
        | &#x9;&#x9;&#x9;
        li
          a(href="#")
            | Legal
            span  Information
  // Scripts
  script(src="/js/jquery.min.js")
  script(src="/js/jquery.dropotron.min.js")
  script(src="/js/jquery.scrollex.min.js")
  script(src="/js/skel.min.js")
  script(src="/js/util.js")
